{
  "name": "Block Studio Theme",
  "type": "dark",
  "colors": {
    "editor.background": "#252525",
    "editor.foreground": "#CCCCCC",
    "editor.selectionBackground": "#0B5AB1",
    "editor.lineHighlightBackground": "#2D3241",
    "editorCursor.foreground": "#CCCCCC",
    "editorBracketMatch.background": "#555555",
    "editorBracketMatch.border": "#CCCCCC",
    "editorWhitespace.foreground": "#555555",
    "editorIndentGuide.background1": "#666666",
    "editorIndentGuide.activeBackground1": "#666666",
    "editorError.foreground": "#FF0000",
    "editorWarning.foreground": "#FF7315",
    "editorInfo.foreground": "#4F4F4F",
    "editorRuler.foreground": "#666666",
    "editorGutter.background": "#252525",
    "editorGutter.modifiedBackground": "#CCCCCC",
    "editorGutter.addedBackground": "#CCCCCC",
    "editorGutter.deletedBackground": "#FF0000",
    "editor.selectionHighlightBackground": "#8D768299",
    "editor.findMatchBackground": "#8D7682",
    "editor.findMatchHighlightBackground": "#8D768299",
    "editorWidget.background": "#2D3241",
    "editorWidget.border": "#666666",
    "editorSuggestWidget.background": "#2E2E2E",
    "editorSuggestWidget.border": "#666666",
    "editorSuggestWidget.foreground": "#CCCCCC",
    "editorSuggestWidget.selectedBackground": "#265AA9",
    "editorSuggestWidget.highlightForeground": "#ff6d7c",
    "editorHoverWidget.background": "#2E2E2E",
    "editorHoverWidget.border": "#666666",
    "editorLineNumber.foreground": "#666666",
    "statusBar.background": "#252525",
    "statusBar.foreground": "#CCCCCC",
    "editorGroup.border": "#666665",
    "sideBar.border": "#666665",
    "panel.border": "#666665",
    "statusBar.border": "#666665",
    "activityBar.border": "#666665"
  },
    "semanticTokenColors": {
    "operatorOverloaded": "#CCCCCC",
    "field": "#CCCCCC",
    "enumMember": "#61a1f1"
  },
  "tokenColors": [
    {
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#666666" }
    },
    {
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": { "foreground": "#f86d7c", "fontStyle": "bold" }
    },
    {
      "scope": ["keyword.operator", "string.json", "meta.structure.dictionary.json", "support.type.property-name.json"],
      "settings": { "foreground": "#CCCCCC" }
    },
    {
      "scope": ["variable.language", "variable.other.readwrite", "variable.other", "variable.other.constant"],
      "settings": { "foreground": "#CCCCCC" }
    },
    {
      "scope": ["constant.language", "constant.numeric", "constant.character", "constant.other"],
      "settings": { "foreground": "#ffc600" }
    },
    {
      "scope": ["string", "constant.other.symbol"],
      "settings": { "foreground": "#adf195" }
    },
    {
      "scope": ["entity.name.function", "variable.function"],
      "settings": { "foreground": "#fdfbac" }
    },
    {
      "scope": [
          "punctuation.section",
          "punctuation.definition.parameters",
          "punctuation.definition.block",
          "punctuation.definition.bracket",
          "meta.brace",
          "meta.bracket",
          "other"
      ],
      "settings": { "foreground": "#CCCCCC" }
    },
    {
      "scope": ["variable.other.property.lua"],
      "settings": { "foreground": "#61a1f1" }
    },
    {
      "scope": ["entity.name.type", "support.type", "storage.type.class", "support.function"],
      "settings": { "foreground": "#84d6f7" }
    },
    {
      "scope": ["entity.name.class", "entity.name.namespace", "entity.name.tag"],
      "settings": { "foreground": "#CCCCCC" }
    },
    {
      "scope": ["invalid", "invalid.deprecated"],
      "settings": { "foreground": "#FF0000" }
    },
    {
      "scope": ["markup.heading", "markup.bold"],
      "settings": { "foreground": "#FF4A6D" }
    },
    {
      "scope": ["markup.italic"],
      "settings": { "foreground": "#FF4A6D" }
    },
    {
      "scope": ["markup.inserted"],
      "settings": { "foreground": "#FFD600" }
    },
    {
      "scope": ["markup.deleted"],
      "settings": { "foreground": "#FF0000" }
    },
    {
      "scope": ["markup.changed"],
      "settings": { "foreground": "#FF7315" }
    },
    {
      "scope": ["markup.quote"],
      "settings": { "foreground": "#CCCCCC" }
    }
  ]
}
